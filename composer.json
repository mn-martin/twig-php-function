{
    "name": "umpirsky/twig-php-function",
    "type": "library",
    "description": "Call (almost) any PHP function from your Twig templates.",
    "license": "MIT",
    "authors": [
        {
            "name": "Saša Stamenković",
            "email": "umpirsky@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "twig/twig": "^3"
    },
    "require-dev": {
        "phpspec/phpspec": "^4.3.4 || ^5.0 || ^6.0 || ^7.0",
        "phpunit/phpunit": "^6.5|^7.0|^8.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Umpirsky\\Twig\\Extension\\": "src/Umpirsky/Twig/Extension/" }
    }
}
